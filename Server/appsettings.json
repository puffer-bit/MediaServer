{
  "Project": {
    "Database": {
      "ConnectionString": "Data Source=server.db"
    },
    "MainServer": {
      "IpAddress": "0.0.0.0",
      "Port": 26666,
      "TurnAddress": "147.45.169.159",
      "TurnPort": 3478,
      "TurnUsername" : "testuser",
      "TurnPassword" : "testpassword",
      "StunAddress": "147.45.169.159",
      "StunPort": 3478,
      "EnableFfmpeg": false,
      "ActivateWebServer": false,
      "TimeOutTimeInSeconds": 25,
      "DatabaseProvider": "sqlite",
      "EnableTurn": true,
      "EnableStun": true
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:7114",
        "Certificate": {
          "Path": "Certs/server.pfx",
          "Password": "MyPassword"
        }
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Fatal",
        "Microsoft.AspNetCore": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
