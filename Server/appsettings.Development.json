{
  "Project": {
    "Database": {
      "ConnectionString": "Data Source=MainServer/Database/server.db"
    },
    "MainServer": {
      "IpAddress": "0.0.0.0",
      "Port": 26666,
      "TurnAddress": "127.0.0.1",
      "TurnPort": 3478,
      "StunAddress": "127.0.0.1",
      "StunPort": 3748,
      "EnableFfmpeg": true,
      "ActivateWebServer": false,
      "TimeOutTimeInSeconds": 25,
      "DatabaseProvider": "sqlite",
      "EnableTurn": true,
      "EnableStun": true
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:7114",
        "Certificate": {
          "Path": "Certs/server.pfx",
          "Password": "MyPassword"
        }
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Fatal",
        "Microsoft.AspNetCore": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "VideoServer"
    }
  }
}
